<div class="containar">
  <div class="row">
    <div class="col-md-5 col-xs-10 mx-auto">

    <h4 class="mt-4 border-bottom border-gray font-weight-bold">
      <i class="fab fa-pagelines"></i>  BuzzSeedへようこそ
    </h4>
<!--カウントアップのJS-->
<script>
$(function(){
    $( function(){
        let $count1 = $('#count1'),S
            $count2 = $('#count2'),
            $count3 = $('#count3');
        countUp(0, <%= @themes.count %>, 1000, $count1);
        countUp(0, <%= @all_answers.count %> , 1500, $count2);
        countUp(0, <%= @all_favorites.count %>, 2000, $count3);
    })
    function countUp (start, stop, duration, element){
        $({percent: start}).animate({percent: stop},{
            duration : duration,
            progress : function(){
                element.text(Math.round(this.percent));
                console.log(Math.round(this.percent));
            }
        });
    }
});
</script>


        <div class="mt-4 ml-2 font-weight-bold text-center" style="line-height:2rem">
          <p>
          現時点で <span class="h3 font-weight-bold" id="count1">0</span> つのお題に対し、<br>
          <span class="h3 font-weight-bold" id="count2">0</span> つのヒトコトが投稿され、<br>
          <span class="all-favorites-count h3 font-weight-bold" id="count3">0</span> 回の
          Good!<i class="fas fa-thumbs-up text-danger"></i>
          が記録されています。
        </p>

      </div>
      <% unless user_signed_in? %>
        <%= link_to "アカウントを作成する" ,new_user_registration_path, data: {"turbolinks"=> false}, class:"btn-info btn mt-3 w-100"; %>
      <% end %>
      <%= link_to "BuzzSeedの使い方をみる" ,about_path, class:"btn-secondary btn btn-sm btm-block mt-3 w-100"; %>

      <h4 class="border-bottom border-gray mt-5 font-weight-bold">
        <i class="fas fa-seedling"></i> ヒトコトPick Up!
      </h4>
      <% @answers.each do |answer| %>
        <article class="mt-5 shadow-lg" id="answer_<%= answer.id %>">
          <%= link_to theme_path(answer.theme) do %>
            <%= attachment_image_tag answer.theme, :image, class:"card-img-top"; %>
          <% end %>
          <h2 class="font-weight-bold m-3">
            <%= link_to answer_path(answer) do %>
            <%= answer.content %>
            <% end %>
          </h2>
          <nav class="navbar-expand mt-2">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item ml-4 h4">
                <%= link_to user_path(answer.user.id) do %>
                  <i class="fas fa-user"></i>
                  <%= answer.user.name %>
                <% end %>
              </li>
              <li class="nav-item ml-4 h4">
                <%= link_to answer_path(answer) do %>
                  <i class="fas fa-comment"></i>
                  <%= answer.comments.count %>
                <% end %>
              </li>
                <!--非同期のためクラスを追加-->
              <li class="nav-item ml-4 h4 favorite-btn">
                <% if user_signed_in? %>
                  <%= render 'public/favorites/favorites_btn' , answer: answer %>
                <% else %>
                <!--ダミーのリンク-->
                  <%= link_to answer_path(answer) do %>
                    Good!<i class="far fa-thumbs-up"></i>
                    <%= answer.favorites.count %>
                  <% end %>
                <% end %>
              </li>
            </ul>
          </nav>
        </article>
      <% end %>
        <%= link_to "もっとヒトコトを見る" , answers_path, class:"btn-info btn mt-5 w-100"; %>
      <% unless user_signed_in? %>
        <p class="mt-2 font-weight-bold">
         ※ログイン前はヒトコト一覧のみ利用頂けます。
        </p>
      <% end %>
    </div>
  </div>
</div>