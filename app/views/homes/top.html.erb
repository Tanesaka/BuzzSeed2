<div class="containar">
  <div class="row">
    <div class="col-md-5 col-xs-10 mx-auto">
      <h2 class="mt-4 font-weight-bold">
        <i class="fab fa-font-awesome-flag"></i> BuzzSeed 総合データ
      </h2>

          <table class="h3 mt-3 ml-2 table col-md-9 col-xs-10">
            <tbody>
                <tr>
                <th>お題数</th>
                <td class="h2 font-weight-bold">
                  <%= link_to themes_path do %>
                    <%= @themes.count %>
                    <% end %>
                </td>
              </tr>
                <tr>
                <th>ヒトコト数</th>
                <td class="h2 font-weight-bold">
                  <%= link_to answers_path do %>
                    <%= @answers.count %>
                    <% end %>
                </td>
              </tr>
              <tr>
                <th>Good!<i class="fas fa-thumbs-up text-danger"></i></i>数</th>
                <td class="h2 font-weight-bold">
                  <span class="all-favorites-count">
                    <%= @all_favorites.count %>
                    <span>
                </td>
              </tr>
            </tbody>
          </table>

<%= link_to "BuzzSeedの使い方",about_path, class:"btn-info btn mt-3 w-100"; %>

      <h2 class="border-bottom border-gray mt-4 font-weight-bold">
        <i class="fas fa-seedling"></i> ヒトコトPick Up!
      </h2>
      <article class="mt-4 shadow-lg" id="answer_<%= @answer.id %>">
        <%= attachment_image_tag @answer.theme, :image, class:"card-img-top"; %>
        <h1 class="font-weight-bold m-3">
          <%= @answer.content %>
        </h1>
        <nav class="navbar-expand mt-2">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item ml-4 h4">
              <%= link_to user_path(@answer.user.id) do %>
                <i class="fas fa-user"></i>
                <%= @answer.user.name %>
              <% end %>
            </li>
            <li class="nav-item ml-4 h4">
              <%= link_to answer_path(@answer) do %>
              <i class="fas fa-comment"></i>
              <%= @answer.comments.count %>
              <% end %>
            </li>
            <!--非同期のためクラスを追加-->
      <li class="nav-item ml-4 h4 favorite-btn">
        <% if user_signed_in? %>
          <%= render 'public/favorites/favorites_btn', answer: @answer %>
          <% else %>
          <%= link_to answer_path(@answer) do %>
          <i class="far fa-heart"></i><%= @answer.favorites.count %>
          <% end %>
          <% end %>
      </li>
          </ul>
        </nav>


   </div>
  </div>
</div>