
<div class="containar">
  <div class="row">
    <div class="col-md-5 col-xs-10 mx-auto">
      <h2 class="border-bottom border-gray mt-4">
        <i class="fab fa-pagelines"></i> ユーザー一覧
      </h2>

<!--ユーザー検索機能-->
<div class="mt-2  text-center">
<%= search_form_for @q, url: admins_users_path do |f| %>
  <%= f.search_field :unique_code_cont , placeholder: "IDで検索"%>
  <%= f.submit "検索", class:"btn-secondary btn mt-2 btn-sm"; %>
<% end %>
<div>

<% if @users.blank? %>
<h5 class="mt-3">ユーザーはいません。<h3>
<% else %>

<table class="table table-striped mt-4">
  <thread>
    <tr>
      <th>Name</th>
      <th>ID</th>
    </tr>
  </thread>
<tbody>
<% @users.each do |user| %>
    <tr>
       <td>
         <%= link_to admins_user_path(user.id) do %>
         <%= user.name %>
         <% end %>
        </td>
      <td><%= user.unique_code %></td>
 </tr>
    <% end %>
  </tbody>
</table>

 <% end %>
    </div>
  </div>
</div>


