<div class="container">
  <div class="row">
    <div class="col-md-7 col-xs-12 mx-auto">
      <h4 class="border-bottom border-gray mt-4">
        <i class="fas fa-user-friends"></i> ユーザー一覧
      </h4>
<!--ユーザー検索機能-->
      <div class="mt-2  text-center">
        <%= search_form_for @q, url: users_path do |f| %>
          <%= f.search_field :unique_code_cont , placeholder: "IDで検索"%>
          <%= f.submit "検索", class:"btn-secondary btn mt-2 btn-sm"; %>
        <% end %>
      </div>
      <%= render 'public/users/list', users: @users %>
    </div>
  </div>
</div>