<%= render "layouts/error_messeages", resource: @user %>
<div class="containar">
  <div class="row">
    <div class="col-md-5 col-xs-10 mx-auto">
    <h4 class="border-bottom border-gray mt-4 font-weight-bold">
      <i class="fas fa-user"></i> プロフィールを編集する
    </h4>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-body p-4 font-weight-bold">
        <label>ニックネーム</label>
        <br>
        <%= f.text_field :name, autofocus: true, placeholder:"ニックネーム", class: "w-50 mt-2"%>
        <br>
<!--IDは変更できないようにする-->
  <!--<label for="inputName">BuzzSeed ID</label>-->
  <%#= f.text_field :unique_code, autofocus: true, placeholder:"BuzzSeed ID"%>
         <label class="mt-3">プロフィール画像</label>
         <%= f.attachment_field :profile_image, class: "mt-2 btn btn-outline-secondary btn-block  btn-sm" %>
         <%= f.submit "保存", class: "mt-2 btn btn-secondary btn-block w-25 btn-sm" %>
      <% end %>
     </div>
   </div>
  </div>
</div>