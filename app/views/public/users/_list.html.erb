<% if users.blank? %>
  <h4 class="mt-3">ユーザーはいません。<h4>
<% else %>
  <table class="table table-striped mt-4">
    <thread>
      <tr>
        <th class="text-left">Name</th>
        <th>ID</th>
        <th></th>
        <th></th>
      </tr>
    </thread>
    <tbody>
      <% users.each do |user| %>
        <tr id="user_<%= user.id %>">
          <td class="text-left align-bottom">
             <%= link_to user_path(user.id) do %>
               <%= attachment_image_tag user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: "no_image.jpg", size: "35x35", class:"rounded-circle shadow-sm"; %>
               <%= user.name %>
             <% end %>
          </td>
          <td class="align-bottom"><%= user.unique_code %></td>
          <td class="align-bottom"><i class="fas fa-seedling"></i><%= user.answers.count %></td>
          <td class="align-bottom">
            <span class="follow-btn">
              <%= render 'public/relations/follow_btn', user: user %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<div class="row">
  <div class="mx-auto mt-2 h2">
    <%= paginate users %>
  </div>
</div>