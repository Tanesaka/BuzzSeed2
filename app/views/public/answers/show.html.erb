<div class="containar">
  <div class="row">
    <div class="col-md-5 col-xs-10 mx-auto">
      <h2 class="border-bottom border-gray mt-4">
        <i class="fab fa-pagelines"></i> コメント
      </h2>
      <article class="mt-4 shadow-lg">
        <%= attachment_image_tag @theme, :image, class:"card-img-top"; %>
        <h1 class="font-weight-bold m-3">
          <%= @answer.content %>
        </h1>
        <nav class="navbar-expand mt-2">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item ml-4 h4">
              <%= link_to user_path(@answer.user.id) do %>
                <i class="fas fa-user"></i>
                <%= @answer.user.name %>
              <% end %>
            </li>
            <li class="nav-item ml-4 h4">
              <i class="fas fa-comment"></i>
              <%= @answer.comments.count %>
            </li>
            <% if @answer.favorited_by?(current_user) %>
              <li class="nav-item ml-4 h4">
                <%= link_to answer_favorites_path(@answer), method: :delete do %>
                  <i class="fas fa-heart text-danger"></i><%= @answer.favorites.count %>
                <% end %>
              </li>
            <% else %>
            <li class="nav-item ml-4 h4">
              <%= link_to answer_favorites_path(@answer), method: :post do %>
                <i class="far fa-heart"></i><%= @answer.favorites.count %>
              <% end %>
            </li>
            <% end %>
            <% if @answer.user == current_user %>
              <li class="nav-item ml-4 h4">
                <%= link_to answer_path, method: :delete do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
        <div class="w-75 ml-3">
          <hr class="w-75">
          <% @answer.comments.each do |comment| %>
            <div class="row">
    <div class="col-2">
      <%= link_to user_path(comment.user_id) do %>
            <%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40", class:"rounded-circle"; %>
           <% end %>
            </div>
            <div class="col-8">
            <p class="font-weight-bold mt-1"><%= comment.content %></p>
            <p class="font-weight-light mt-2"><%= comment.created_at.strftime('%Y/%m/%d') %>
              <% if comment.user == current_user %>
                <%= link_to answer_comment_path(comment.answer, comment), method: :delete do %>
                  <i class="far fa-trash-alt"></i>
              <% end %>
            </p>

          <% end %>
          </div>
          </div>
          <hr class="w-75">
          <% end %>

        </div>
        <div>
          <%= form_with(model:[@answer, @comment], local: true) do |f| %>
            <%= f.text_area :content, rows:'4', class: "mt-2 w-100", placeholder: "コメントをここに" %>
             <%= f.submit "投稿する", class: "mt-2 btn btn-secondary btn-block w-100" %>
          <% end %>
        </div>
      </article>
   </div>
  </div>
</div>